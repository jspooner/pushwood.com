<div id="floating-navbar" class="container">
  <div  class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <!-- Be sure to leave the brand out there if you want it shown -->
        <a class="brand" href="/">Pushwood</a>
        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse collapse">
          <form action="/search" method="get" class="navbar-form pull-left">
            <div class="input-append">
              <input type="text" name="query" class="" placeholder="Search">
              <button type="submit" class="btn"><%= glyph :search %></button>
            </div>
          </form>
          <% if current_user %>
          <ul class="nav pull-right">
            <li><%= link_to "Battle", battles_skateparks_path %></li>
            <li><%= link_to "Directory", places_path %></li>
            <li class="dropdown hidden-phone">
              <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                <li><%= link_to 'Add Skate Park', new_location_path, tabindex:"-1" %></li>
                <% if current_user.role? :admin %>
                <li class="divider"></li>
                <li><%= link_to "Users", admin_users_path %></li>
                <li><%= link_to "Roles", admin_roles_path %></li>
                <li><%= link_to "Locations", admin_locations_path %></li>
                <li><%= link_to "Images", admin_images_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to 'Logout', destroy_user_session_path, tabindex:"-1" %></li>
              </ul>
            </li>
            
            <% if current_user.role? :admin %>
            <li class="visible-phone divider"></li>
            <li class="visible-phone"><%= link_to "Users", admin_users_path %></li>
            <li class="visible-phone"><%= link_to "Roles", admin_roles_path %></li>
            <li class="visible-phone"><%= link_to "Locations", admin_locations_path %></li>
            <li class="visible-phone"><%= link_to "Images", admin_images_path %></li>
            <li class="visible-phone"><%= link_to "Marker Verification", admin_marker_verification_path %></li>
            <li class="visible-phone"><%= link_to "Duplicates", admin_duplicates_path %></li>
            <% end %>
          </ul>
          <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Battle", battles_skateparks_path %></li>
            <li><%= link_to "Directory", places_path %></li>
            <li><%= link_to image_tag("login-with-facebook.gif"), "/auth/facebook", :class => "imgLink" %></li>
          </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>