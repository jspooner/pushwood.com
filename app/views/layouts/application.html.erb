<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Pushwood" %></title>
		<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
		<meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <%= stylesheet_link_tag "reset-fonts", "960", "styles" %>    
    <%= javascript_include_tag :defaults, 'underscore', 'backbone' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %>" >
	<div class="container_12">
		<div class="grid_12">
			<%= link_to 'home', root_path %>			|
			<%= link_to 'locations', locations_path %> |
		<% if current_user %>
			<%= link_to 'logout', destroy_user_session_path %> | 
			<%= link_to 'invite', new_user_invitation_path %> |
		<% else %>
			<%= link_to 'login', new_user_session_path %> 
		<% end %>			
		</div>
		<div class="grid_12">

				<%= yield %>

		</div>
	</div>
		<%= yield(:script) %>
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-23487589-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
  </body>
</html>