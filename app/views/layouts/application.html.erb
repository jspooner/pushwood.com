<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Pushwood" %></title>
   <meta charset="utf-8">
   <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
     Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- <meta name="viewport" content="initial-scale=1.0, user-scalable=no" /> -->
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Pushwood skatepark locator and iPhone app." %>"> 
    <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "Skateboard, skateboarding, skatespot, skate, skatepark, skate park, halfpipe, miniramp, street course, iPhone, iPhone App" %>">
    <meta property="fb:admins" content="the.real.jonathan.spooner" />
    <meta property="fb:page_id" content="122652701165628" />
    <meta property="fb:app_id" content="202979059717647" />
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= include_gon(:camel_case => true, :namespace => 'rails') %>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag 'bootstrap/application' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body lang="en" data-controller="<%= controller_name %>" data-action="<%= action_name %>">
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <a class="brand" href="/">Pushwood</a>
        <ul class="nav">
          <li class="active"><%= link_to 'Skateparks', '/skateparks/23424977-united-states' %></li>
          <li class=""><a target="_blank" href="http://itunes.apple.com/us/app/pushwood-skatepark-locator/id457305109?mt=8">iPhone App</a></li>
        </ul>
        <form id="search-form" class="js-search-form" action="/search" method="GET">
          <span class="glass js-search-action"><i></i></span>
          <input value="<%= @query || "" %>" placeholder="Search" name="q" id="search-query" type="text">
        </form>          
        <ul class="nav secondary-nav">
          <% if current_user %>
          <li class="menu" data-dropdown="dropdown" >
              <a href="#" class="dropdown-toggle menu"><%= current_user.email %></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Invite Friends', new_user_invitation_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Logout', destroy_user_session_path %></li>
              </ul>
            </li>
          <% else %>
          <li><%= link_to image_tag("login-with-facebook.gif"), "/auth/facebook", :class => "imgLink" %></li>
        	<% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="container main-content">
    <%= yield %>
  </div>
  <div class="container">
    <p>Copyright &copy; 2011 Pushwood LLC.  <%= link_to "terms of service", terms_of_service_path %> | <%= link_to "archive", archive_path %></p>
  </div>


  <%= javascript_include_tag :application %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-23487589-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  </body>
</html>