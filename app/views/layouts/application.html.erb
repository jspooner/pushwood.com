<!doctype html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head prefix="<%= Woodhack::Application.config.facebook_prefix %>">
    <title><%= content_for?(:title) ? yield(:title) : "Skate Park Directory" %></title>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
     Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : " Pushwood is your database of skateparks!  Our service is just about the facts. All of our data is curated by our administrators, so you can be sure that the information you get is accurate." %>"> 
    <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "Skateboard, skateboarding, skate spot, skate, skatepark, skate park, halfpipe, miniramp, street course, iPhone, iPhone App" %>">
    <meta property="fb:admins" content="the.real.jonathan.spooner" />
    <meta property="fb:app_id" content="<%= Woodhack::Application.config.facebook_id %>" />
    <meta name="apple-itunes-app" content="app-id=457305109">
    <meta name="inmobi-site-verification" content="f1a84c048a28de5f99f2d7b55344ed7d">
    <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= include_gon(:camel_case => true, :namespace => 'rails') %>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag 'application' %>

    <%= yield(:head) %>
    <% if Rails.env == "production" %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-23487589-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    <% end %>
  </head>
  <body lang="en" data-controller="<%= yield :namespace %><%= controller_name %>" data-action="<%= action_name %>">
    
    <div id="map-container" class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div id="map_canvas" style="width:100%; height:430px"></div>
        </div>
      </div>
    </div>
    
    <%= render '/layouts/navbar' %>
    
    <%= yield %>
    
    <div class="container hidden-phone">
      <div class="row">
        <div style="width:728px;margin:30px auto 10px auto;">
          <script type="text/javascript"><!--
          google_ad_client = "ca-pub-6987587183408883";
          /* Footer */
          google_ad_slot = "4471293495";
          google_ad_width = 728;
          google_ad_height = 90;
          //-->
          </script>
          <script type="text/javascript"
          src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
          </script>
          <%= link_to image_tag("hoopla_pushwood.jpg"), "http://goo.gl/WutkU", target: "_blank" %>
        </div>
      </div>
    </div>
    
    
    <div class="pageit container footer">
      <div class="container">
        <footer class="row">
          <div class="span12">
            <ul>
              <li>Copyright &copy; 2013 Pushwood Inc.</li>
              <li><%= link_to "Terms of Service", terms_of_service_path %></li>
              <li><%= link_to "Support", support_path %></li>
            </ul>
          </div>
        </footer>
      </div>
    </div>
    
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=295764620489238";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    
    
    
  </body>
</html>