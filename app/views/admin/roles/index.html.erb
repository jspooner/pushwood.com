<div class="container">
  <header>
    <h1>User Roles</h1>
    <p class="lead">
    </p>
  </header>
</div>

<div class="pageit container">
  <div id="content" class="container">
    <div class="span12">
      <h3>All Roles</h3>
      <table id="users-table" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td class="col-actions"><div><%= link_to 'Show List of Users', [:admin, role] %></div><div><%= link_to 'Edit', edit_admin_role_path(role) %></div><div><%= link_to 'Destroy', [:admin, role], confirm: 'Are you sure?', method: :delete %></div></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



