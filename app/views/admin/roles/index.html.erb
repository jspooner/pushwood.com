<h1>User Roles</h1>
<div class="section tbl">
  <h3>All Roles</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td class="col-actions"><div><%= link_to 'Show List of Users', [:admin, role] %></div><div><%= link_to 'Edit', edit_admin_role_path(role) %></div><div><%= link_to 'Destroy', [:admin, role], confirm: 'Are you sure?', method: :delete %></div></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="section">
  <%= link_to 'New Role', new_admin_role_path, :class => "float-right btn green" %>
</div>