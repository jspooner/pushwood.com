<h1>
  <%# <span class="bold">Name:</span> %>
  <%= @user.first_name %>
  <%= @user.last_name %>
</h1>
<h3>
  <span class="bold">Email:</span>
  <%= @user.email %>
</h3>
<div class="section mt18">
  <h3>Current roles</h3>
  <% if @user.roles.empty? %>
  	<p>This user has no roles.</p>
  <% end %>
  <ul><% @user.roles.each do |role| %>
  	<li><%= role.name %></li>
  <% end %>
  </ul>
</div>

<div class="">
  <div class="float-left">
    <%= link_to 'Back', admin_users_path %>
  </div>
  <div class="float-right">
    <%= link_to 'Edit', edit_admin_user_path(@user), :class => "btn yellow" %>
  </div>
</div>
