<div class="container">
  <header>
    <h1>User Management</h1>
    <p class="lead">
    </p>
  </header>
</div>

<div class="pageit container">
  <div id="content" class="container">
    <div class="span12">
      <h3><%= @users.count %> Users</h3>
      <table id="users-table" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Roles</th>
            <th>Images</th>
            <th>Login Count</th>
            <th>Created At</th>
            <th class="col-actions">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.email}", admin_user_path(user) %></td>
            <td><%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user) %></td>
            <td><%= user.roles.collect(&:name).join(", ") %></td>
            <td><%= user.images.count %></td>
            <td><%= user.sign_in_count %></td>
            <td>
              <%= l user.created_at.to_date %><br>
              <%= time_ago_in_words user.created_at.to_date %> ago
            </td>
            <td class="col-actions"><%= link_to "Edit", edit_admin_user_path(user) %></td>
          </tr>
        <% end %>	
        </tbody>
        <tfoot>
          <tr>
            <td colspan="7"><%= link_to 'Invite New User', new_admin_user_path, :class => "float-right btn green" %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>



